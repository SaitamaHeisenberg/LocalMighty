{
  "name": "localmighty",
  "version": "1.0.0",
  "private": true,
  "description": "Local Wi-Fi SMS and notifications sync between Android and PC",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:server": "pnpm --filter @localmighty/server dev",
    "dev:web": "pnpm --filter @localmighty/web dev",
    "build:server": "pnpm --filter @localmighty/server build",
    "build:web": "pnpm --filter @localmighty/web build"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
